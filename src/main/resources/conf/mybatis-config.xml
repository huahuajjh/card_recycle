<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 配置别名 -->
    <typeAliases>
        <package  name="com.tqmars.cardrecycle.domain.entities"/>
    </typeAliases>

    <!-- 环境参数配置 -->
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <!-- 数据源-连接池方式 -->
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://192.168.1.9:3306/card_recycle?characterEncoding=UTF-8"/>
                <property name="username" value="root"/>
                <property name="password" value="123"/>
                <property name="driver.encoding" value="UTF-8"/>
                <!--启用断开链接检测-->
                <property name="poolPingEnabled" value="true"/>
                <!--测试链接的sql语句-->
                <property name="poolPingQuery" value="select version()" />
                <!--每次都检测链接-->
                <property name="poolPingConnectionsNotUsedFor" value="60"/>
            </dataSource>
        </environment>
    </environments>

    <!--mapping-->
    <mappers>
        <mapper resource="mybatis-mapper/base-mapper.xml"/>
    </mappers>
</configuration>