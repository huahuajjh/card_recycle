                            <p>您可以手动 <a href="#/signin">点击此进入</a> 登录页面</p>
                            <a class="btn btn-default btn-sm mt10" href="#/">返回首页</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </frontTemp>
</template>
<script>
    export default {
        data: {
            showIndex: 0,
            sendTime: -1,
            sendTimeVal: 0,
            step: {
                username: "",
                verifycode: "",
                sendVerifycode: "",
                newPassword: "",
                newPasswordTwo: ""
            }
        },
        components: {
            "frontTemp": require("../../component/frontTemplate/front.rgl")
        },
        sendCode() {
            var self = this;
            self.$update({sendTimeVal: 30});
            self.data.sendTime = setInterval(()=>{
                if(self.data.sendTimeVal == 1) {
                    clearInterval(self.data.sendTime);
                }
                self.$update({
                    sendTimeVal: self.data.sendTimeVal - 1
                });
            }, 1000);
        },
        validation: {
            baseAttrName: "step",
            model: {
                username: {
                    required: true,
                    minlength: 6,
                    or: {
                        email: true,
                        phone: true
                    }
                },
                verifycode: {
                    required: true,
                    alphaDash: true,
                    minlength: 4,
                },
                sendVerifycode: {
                    required: true,
                    alphaDash: true,
                    minlength: 4,
                },
                newPassword: {
                    required: true,
                    alphaDash: true,
                    minlength: 7,
                },
                newPasswordTwo: {
                    required: true,
                    repeat: "step.newPassword",
                    minlength: 7,
                }
            },
            message: {
                username: {
                    or: "只能输入邮箱或者手机"
                }
            }
        }
    }
</script>