                            <label class="control-label pull-left mt5" style="margin-left: 23%; width: 10.33333333%;">确认密码：</label>
                            <div class="mr4 pull-left" style="width: 33.33333333%;">
                                <input type="password" class="form-control" maxlength="4" placeholder="请输入确认密码" maxlength="15" r-model="step.newPasswordTwo">
                            </div>
                            <div style="width: 20%;" class="text-red pt5 pl5 pull-left" r-hide={$validation.newPasswordTwo.isPass}>{$validation.newPasswordTwo.msg}</div>
                            <div class="clear"></div>
                        </div>
                        <div class="form-group pb30">
                            <div style="margin-left: 33.33333333%; width: 33.33333333%;">
                                <input class="btn btn-primary btn-block" type="submit" value="确定"
                                {#if !$validation.newPassword.__isPass || !$validation.username.__isPass || !$validation.newPasswordTwo.__isPass}disabled{/if}
                                on-click={showIndex = showIndex + 1}>
                            </div>
                        </div>
                    </form>
                    <div class="safe-icon-box mt50" r-hide={showIndex != 3}>
                        <i class="icon icon-fore1"></i>
                        <div class="fore">
