                                <div class="stepflex-progress"></div>
                            </li>
                        </ul>
                    </div>
                    <div class="clear"></div>
                    <form r-hide={showIndex != 0} onsubmit="return false;">
                        <div class="form-group pt30">
                            <label class="control-label pull-left mt5" style="margin-left: 12%; width: 21.33333333%;">用户名（邮箱或手机）：</label>
                            <div class="mr4 pull-left" style="width: 33.33333333%;">
                                <input class="form-control" type="text" placeholder="请输入邮箱或手机" maxlength="15" r-model="step.username">
                            </div>
                            <div style="width: 20%;" class="text-red pt5 pl5 pull-left" r-hide={$validation.username.isPass}>{$validation.username.msg}</div>
                            <div class="clear"></div>
                        </div>
                        <div class="form-group">
                            <label class="control-label pull-left mt5" style="margin-left: 25%; width: 8.33333333%;">验证码：</label>
                            <div class="mr4 pull-left" style="width: 16.66666667%;">
                                <input type="text" class="form-control" maxlength="4" placeholder="请输入验证码" r-model="step.verifycode">
                            </div>
                            <div class="pull-left ml20" style="width: 16.66666667%;">
                                <img src="http://www.lipin.com/include/code/getimg.php" class="verifyimg code" title="点击图片刷新验证码">
                            </div>
                            <div style="width: 20%;" class="text-red pt5 pl5 pull-left" r-hide={$validation.verifycode.isPass}>{$validation.verifycode.msg}</div>
