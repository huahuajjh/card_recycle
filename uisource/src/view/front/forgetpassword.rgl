                                <input class="btn btn-primary btn-block" type="submit" value="下一步"
                                {#if !$validation.sendVerifycode.__isPass || !$validation.username.__isPass}disabled{/if}
                                on-click={showIndex = showIndex + 1}>
                            </div>
                        </div>
                    </form>
                    <form r-hide={showIndex != 2} onsubmit="return false;">
                        <div class="form-group pt30">
                            <label class="control-label pull-left mt5" style="margin-left: 23%; width: 10.33333333%;">登录密码：</label>
                            <div class="mr4 pull-left" style="width: 33.33333333%;">
